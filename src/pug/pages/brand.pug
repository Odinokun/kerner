extends ../_template

mixin product-card-01(pic, price, text)
  .product-card-01
    a(href="#").product-card-01__img
      img(src="assets/img/product-" + pic + ".jpg" alt="picture")
    .product-card-01__row
      label.product-card-01__compare
        input(type='checkbox')
        span
          |В сравнение
          svg(width="9" height="7" viewBox="0 0 9 7" fill="none" xmlns="http://www.w3.org/2000/svg")
            path(d="M1 2.33333L3.8 5L8 1" stroke-width="2")

    a(href="#").product-card-01__name #{text}

    .product-card-01__price
      span #{price}
      span ₽

    .product-card-01__footer
      .product-card-01__counter
        include ../elements/counter
      a(href="#").product-card-01__basket В корзину

mixin product-card-02(pic, price, text, review)
  .product-card-01
    a(href="#").product-card-01__img
      img(src="assets/img/product-" + pic + ".jpg" alt="picture")
    .product-card-01__row
      label.product-card-01__compare
        input(type='checkbox')
        span
          |В сравнение
          svg(width="9" height="7" viewBox="0 0 9 7" fill="none" xmlns="http://www.w3.org/2000/svg")
            path(d="M1 2.33333L3.8 5L8 1" stroke-width="2")

      a(href="#").product-card-01__reviews Отзывы: #{review}

    a(href="#").product-card-01__name #{text}

    .product-card-01__price
      span #{price}
      span ₽

    .product-card-01__footer
      .product-card-01__counter
        include ../elements/counter
      a(href="#").product-card-01__basket В корзину


mixin brand-item__open(title)
  //begin brand-item__open
  .brand-item__open
    span.brand-item__open-text #{title}
    span.brand-item__open-arr
      svg(width='7', height='12', viewBox='0 0 7 12', fill='none', xmlns='http://www.w3.org/2000/svg')
        path(d='M6 1L2 6L6 11', stroke='#253A5A', stroke-width='2')
  //end brand-item__open

mixin brand-item__close()
  //begin brand-item__close
  .brand-item__close

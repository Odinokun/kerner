//begin category-body__sort
.category-body__sort.category-sort-filter
  .category-sort-filter__left
    .category-sort-filter__left-title Сортировать:
    .category-sort-filter__left-filter
      .category-sort-filter__left-item
        a(href="#").category-sort-filter__left-link по умолчанию
      .category-sort-filter__left-item
        a(href="#").category-sort-filter__left-link по популярности
      .category-sort-filter__left-item.category-sort-filter__left-item--price.active
        a(href="#").category-sort-filter__left-link по цене
          +svg('filter-price-02')
        a(href="#").category-sort-filter__left-link по цене
          +svg('filter-price-01')

  .category-sort-filter__right
    a(href="#").category-sort-filter__right-link
      +svg('line-icon')
    a(href="#").category-sort-filter__right-link.active
      +svg('card-icon')
